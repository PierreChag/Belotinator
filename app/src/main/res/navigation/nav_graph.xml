<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MainFragment">

    <fragment
        android:id="@+id/MainFragment"
        android:name="com.poulpinou.belotinator.MainFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_MainFragment_to_PlayersFragment"
            app:destination="@id/PlayersFragment" />
    </fragment>
    <fragment
        android:id="@+id/PlayersFragment"
        android:name="com.poulpinou.belotinator.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_players">

        <action
            android:id="@+id/action_PlayersFragment_to_MainFragment"
            app:destination="@id/MainFragment" />
    </fragment>
</navigation>